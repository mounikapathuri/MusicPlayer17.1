<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sid.musicplayer171.MainActivity">

    <Button
        android:id="@+id/btnStartMusic"
        android:text="Start Music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnStopMusic"
        android:layout_alignBottom="@+id/btnStopMusic"
        android:layout_toStartOf="@+id/btnStopMusic"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/btnStopMusic"
        android:text="Stop Music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="62dp" />

</RelativeLayout>
